.login-page {
  padding: 64rpx 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.login-header {
  text-align: center;
  margin-bottom: 64rpx;
  color: white;
}

.login-title {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.login-desc {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 登录卡片 */
.login-card {
  background: white;
  border-radius: 24rpx;
  padding: 48rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 48rpx;
  text-align: center;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 32rpx;
  background: #fff;
  box-sizing: border-box;
  transition: border-color 0.3s;
}

.form-input:focus {
  border-color: #667eea;
}

.form-input::placeholder {
  color: #adb5bd;
}

/* 登录按钮 */
.login-actions {
  margin-top: 48rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.login-btn::after {
  border: none;
}

.login-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.login-btn.disabled {
  background: #e9ecef;
  color: #adb5bd;
}

/* 登录页脚 */
.login-footer {
  text-align: center;
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #f0f2f5;
}

.forgot-password {
  color: #667eea;
  font-size: 28rpx;
  text-decoration: underline;
}

/* 登录说明 */
.login-notice {
  margin-top: 48rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.notice-text {
  display: block;
  color: rgba(255, 255, 255, 0.9);
  font-size: 24rpx;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.notice-text:last-child {
  margin-bottom: 0;
}

/* TDesign 组件样式覆盖 */
.t-input {
  border-radius: 12rpx;
}

.t-button {
  border-radius: 12rpx;
} 
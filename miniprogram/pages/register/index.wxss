.register-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 48rpx 32rpx;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 48rpx;
  color: white;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 16rpx;
}

.page-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 表单容器 */
.form-container {
  background: white;
  border-radius: 24rpx;
  padding: 48rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.required {
  color: #ff4757;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 32rpx;
  background: #fff;
  box-sizing: border-box;
  transition: border-color 0.3s;
}

.form-input:focus {
  border-color: #667eea;
}

.form-input::placeholder {
  color: #adb5bd;
}

.form-input:disabled {
  background: #f8f9fa;
  color: #6c757d;
}

/* 表单错误状态 */
.form-input.error {
  border-color: #dc3545;
  background: #fff5f5;
}

.form-input.error:focus {
  border-color: #dc3545;
  box-shadow: 0 0 0 3rpx rgba(220, 53, 69, 0.1);
}

/* 错误提示 */
.error-tip {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #dc3545;
  padding-left: 8rpx;
  display: flex;
  align-items: center;
}

.error-tip::before {
  content: '⚠️';
  margin-right: 8rpx;
}

/* 性别选择 */
.gender-buttons {
  display: flex;
  gap: 16rpx;
}

.gender-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  background: #fff;
  transition: all 0.3s;
}

.gender-btn.active {
  border-color: #667eea;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
}

.gender-icon {
  font-size: 32rpx;
}

.gender-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 手机号容器 */
.phone-container {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.phone-input {
  flex: 2; /* 手机号输入框占2/3宽度 */
}

.wx-get-btn {
  flex: 1; /* 微信获取按钮占1/3宽度 */
  height: 88rpx;
  border: none;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #2ed573 0%, #17c0eb 100%);
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.wx-get-btn::after {
  border: none;
}

.wx-get-btn.success {
  background: linear-gradient(135deg, #48CAE4 0%, #0096C7 100%);
}

.wx-get-btn:disabled {
  background: #e9ecef;
  color: #adb5bd;
}

/* 手机号来源提示 */
.phone-source {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.source-text {
  font-size: 24rpx;
  font-weight: 500;
}

.wx-source {
  color: #28a745;
}

.manual-source {
  color: #667eea;
}

.clear-phone {
  font-size: 24rpx;
  color: #dc3545;
  text-decoration: underline;
}

/* 短信验证码容器 */
.sms-container {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.sms-input {
  flex: 2; /* 验证码输入框占2/3宽度 */
}

.sms-btn {
  flex: 1; /* 发送按钮占1/3宽度 */
  height: 88rpx;
  border: none;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.sms-btn::after {
  border: none;
}

.sms-btn.active {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: white;
}

.sms-btn.disabled {
  background: #e9ecef;
  color: #adb5bd;
}

/* 开发模式验证码提示 */
.dev-sms-tip {
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  background: #fff3cd;
  border: 1rpx solid #ffeaa7;
  border-radius: 12rpx;
}

.dev-tip-text {
  font-size: 24rpx;
  color: #856404;
}

/* 提交按钮 */
.submit-section {
  padding: 0 32rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.submit-btn::after {
  border: none;
}

.submit-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.submit-btn.disabled {
  background: #e9ecef;
  color: #adb5bd;
}

/* 成功状态弹窗 */
.success-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.success-content {
  background: white;
  border-radius: 24rpx;
  padding: 64rpx 48rpx;
  margin: 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.success-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
}

.success-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
}

/* 开门状态 */
.door-status {
  margin-top: 32rpx;
}

.door-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  color: #667eea;
  font-size: 28rpx;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 自定义表单项样式 */
.form-item {
  margin-bottom: 32rpx;
  background: white;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
}

/* TDesign 组件样式覆盖 */
.t-input {
  border-radius: 12rpx;
}

.t-button {
  border-radius: 12rpx;
}

.t-radio-group {
  display: flex;
  gap: 32rpx;
}

/* 微信授权弹窗样式 */
.auth-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.auth-modal {
  width: 300px;
  background: white;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.auth-modal-header {
  padding: 24px 20px 16px;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.auth-title {
  font-size: 18px;
  font-weight: 600;
}

.auth-modal-content {
  padding: 20px;
}

.auth-info {
  text-align: center;
  margin-bottom: 20px;
}

.auth-desc {
  display: block;
  font-size: 14px;
  color: #666;
  line-height: 1.5;
  margin-bottom: 4px;
}

.auth-features {
  space-y: 8px;
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.feature-icon {
  color: #52c41a;
  font-weight: bold;
  margin-right: 8px;
  width: 16px;
}

.feature-text {
  font-size: 13px;
  color: #666;
}

.auth-modal-footer {
  padding: 0 20px 20px;
}

.auth-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 8px;
  color: white;
  font-size: 16px;
  padding: 12px;
}

.user-welcome {
  margin-top: 8px;
}

.welcome-text {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
}

/* 表单区域样式 */
.form-section {
  margin: 16px;
  background: white;
  border-radius: 12px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
  padding-bottom: 8px;
  border-bottom: 1px solid #f0f0f0;
}

.section-icon {
  font-size: 18px;
  margin-right: 8px;
}

.title-text {
  margin-left: 0;
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.form-row {
  margin-bottom: 12px;
}

.radio-group {
  margin-top: 8px;
}

.radio-row {
  display: flex;
  gap: 20px;
}

.radio-item {
  flex: 1;
}

/* 日期选择器样式 */
.date-picker {
  width: 100%;
}

.date-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  border: 1px solid #ddd;
  border-radius: 8px;
  background: white;
}

.date-label {
  font-size: 14px;
  color: #666;
}

.date-value {
  font-size: 14px;
  color: #333;
}

/* 未授权提示样式 */
.unauthorized-tip {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: white;
  border-radius: 12px;
  padding: 24px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  text-align: center;
}

.tip-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tip-icon {
  font-size: 32px;
  margin-bottom: 12px;
}

.tip-text {
  font-size: 16px;
  color: #666;
  margin-bottom: 16px;
}

.tip-btn {
  background: #0052d9;
  color: white;
  border: none;
  border-radius: 6px;
  padding: 8px 16px;
}

.chevron-icon {
  font-size: 12px;
  color: #999;
  transform: rotate(90deg);
} 